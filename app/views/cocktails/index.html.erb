
<div class="container pt-3 mt-5">
  <div class="row justify-content-center">
    <div class="col-6 border p-5 bg-light">
      <h1 class="pb-3">List of Cocktails</h1>
      <% @cocktails.each do |cocktail| %>
        <h5 class="p-2"> <%= link_to cocktail.name, cocktail_path(cocktail) %> </h5 class="p-2">
      <% end %>
      <%= link_to "Add a new Cocktail!", new_cocktail_path, class: "btn btn-primary"  %>
    </div>
  </div>

</div>


